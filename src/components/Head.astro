---
const { favicon } = Astro.props
---

<head>
    <meta charset="UTF-8" />
    <meta
        http-equiv="X-UA-Compatible"
        content="IE=edge"
    />
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1.0"
    />
    <meta content="X-Content-Type-Options: nosniff" />
    <title>The Block Link | On-Chain News</title>

    <!-- Roboto -->
    <link
        rel="preconnect"
        href="https://fonts.googleapis.com"
    />
    <link
        rel="preconnect"
        href="https://fonts.gstatic.com"
        crossorigin
    />
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
        rel="stylesheet"
    />

    <!-- Montserrat -->
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&family=Roboto&display=swap"
        rel="stylesheet"
    />

    <link
        rel="stylesheet"
        href="/css/global.css"
    />
    <link
        rel="stylesheet"
        media="screen and (max-width: 810px)"
        href="/css/mobile.css"
    />
    <script
        src="https://kit.fontawesome.com/6543bd4db3.js"
        crossorigin="anonymous"
    ></script>
    <link
        rel="shortcut icon"
        type="image/x-icon"
        href={favicon}
    />
    <script defer src="/js/index.js"></script>
</head>
