---
const { logo, homeCurrent, articlesCurrent, aboutCurrent } = Astro.props
---

<nav id="main-nav">
    <div class="nav-container">
        <div class="logo-container">
            <img
                class="logo-triangle"
                alt="The Chain Link Logo"
                src={logo}
            />
        </div>
        <div>
            <h1 class="nav-heading">BLOCKCHAIN DECRYPTED</h1>
        </div>
        <ul>
            <li
                ><a
                    href="/"
                    class={homeCurrent}>Home</a
                >
            </li>
            <li
                ><a
                    href="/articles"
                    class={articlesCurrent}>Articles</a
                >
            </li>
            <li
                ><a
                    href="/about"
                    class={aboutCurrent}>About</a
                >
            </li>

            <style>
                /* Nav */
                nav {
                    position: sticky;
                    top: 0;
                    z-index: 2;
                    transition: top 0.4s ease;
                    background-color: var(--eerie-black);
                }

                nav .nav-container {
                    display: grid;
                    grid-template-columns: 3fr 4fr 3fr;
                    padding: 1rem;
                    align-items: center;
                    max-width: var(--max-width);
                    margin: auto;
                    padding: 0 2rem;
                    overflow: hidden;
                }

                .logo-triangle {
                    position: relative;
                    width: 100px;
                }

                .nav-heading {
                    letter-spacing: 0.2rem;
                    text-align: center;
                }

                nav ul {
                    justify-self: end;
                    display: flex;
                }

                nav ul li a {
                    padding: 0.75rem;
                    font-weight: bold;
                }

                nav ul li a.current {
                    background-color: var(--eerie-black);
                    border: 2px solid var(--gold-crayola);
                    border-radius: 2px;
                }

                nav ul li a:hover {
                    transition: color 0.8s ease;
                    color: var(--mandarin);
                }
            </style>
        </ul>
    </div>
</nav>
